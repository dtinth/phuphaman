---
import { Icon } from "astro-icon";
import Nav from "../components/Nav.astro";
const { headOverlay = false } = Astro.props;
---

<header id="head" class="bg-white">
  <div class="px-6">
    <a href="/" class="logo text-orange-600" title="Home">
      <Icon name="home-icon" height="32" />
      {
        headOverlay ? (
          ""
        ) : (
          <strong>
            ภูผาม่าน
            <b class="font-handwriting" style="color: red;">
              .org
            </b>
          </strong>
        )
      }
    </a>
    <Nav />
  </div>
</header>

<style>
  header {
    /* background-color: var(--s-nav-bg); */
    position: sticky;
    top: 0;
    z-index: 100;
    box-shadow: var(--s-shadow-1);
    padding: 1rem 0;
  }
  header > div {
    align-items: center;
    display: flex;
    gap: 1rem;
  }
  .logo {
    display: flex;
    align-items: center;
    gap: 6px;
    font-size: 1.125em;
    margin-right: auto;
  }
</style>
