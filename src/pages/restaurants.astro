---
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';
import Layout from "../layouts/Layout.astro";

const restaurantEntries = await getCollection('restaurants');
const title = "Restaurants";
const description = "รายการร้านอาหารในขอนแก่น";
---

<Layout title={title} description={description}>
  <div class="bg-white">
    <div class="mx-auto max-w-7xl px-6 py-24 lg:px-8">
      <div class="mx-auto max-w-2xl text-center">
        <h1 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">
          ร้านอาหาร
        </h1>
        <p class="mt-6 text-lg leading-8 text-gray-600">
          รายการร้านอาหารแนะนำในขอนแก่น
        </p>
      </div>

      <div class="mx-auto mt-16 max-w-2xl sm:mt-20 lg:mt-24 lg:max-w-none">
        <div class="grid max-w-xl grid-cols-1 gap-x-8 gap-y-16 lg:max-w-none lg:grid-cols-3">
          {restaurantEntries.map((restaurant) => {
            // Extract properties
            const category = restaurant.data.properties.Category?.select?.name || '';
            const description = restaurant.data.properties.Description?.rich_text?.[0]?.plain_text || '';
            const phone = restaurant.data.properties.Phone?.phone_number || '';
            const photo = restaurant.data.properties.Photo?.files?.[0]?.file?.url ||
                         restaurant.data.properties.Photo?.files?.[0]?.external?.url || '';

            return (
              <div class="flex flex-col bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden hover:shadow-md transition-shadow">
                {photo && (
                  <div class="aspect-w-16 aspect-h-9">
                    <Image src={photo} alt={restaurant.data.name} width={400} height={192} class="w-full h-48 object-cover" />
                  </div>
                )}

                <div class="flex-1 p-6">
                  <div class="flex items-start justify-between">
                    <div class="flex-1">
                      <h3 class="text-lg font-semibold leading-7 text-gray-900">
                        <a href={`/restaurants/${restaurant.id}`} class="hover:text-orange-600">
                          {restaurant.data.name}
                        </a>
                      </h3>

                      {category && (
                        <div class="mt-2">
                          <span class="inline-flex items-center rounded-full bg-orange-100 px-2.5 py-0.5 text-xs font-medium text-orange-800">
                            {category}
                          </span>
                        </div>
                      )}
                    </div>
                  </div>

                  {description && (
                    <p class="mt-3 text-sm text-gray-600 line-clamp-3">
                      {description.length > 100 ? description.substring(0, 100) + '...' : description}
                    </p>
                  )}

                  {phone && (
                    <p class="mt-3 text-sm text-gray-500">
                      <span class="font-medium">โทร:</span> {phone}
                    </p>
                  )}

                  <div class="mt-6">
                    <a href={`/restaurants/${restaurant.id}`}
                       class="inline-flex items-center rounded-md bg-orange-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-orange-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-orange-600">
                      ดูรายละเอียด
                      <span aria-hidden="true" class="ml-1">→</span>
                    </a>
                  </div>
                </div>
              </div>
            );
          })}
        </div>

        {restaurantEntries.length === 0 && (
          <div class="text-center">
            <p class="text-gray-500">No restaurants found or error connecting to Notion.</p>
          </div>
        )}
      </div>
    </div>
  </div>
</Layout>